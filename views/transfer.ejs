<%- include('partials/header.ejs') %>
<h1>Transfer Money</h1>
<div class="container">
  <div class="outline">
    <form class="form" action="/transfer/<%=id%>" method="POST">
      <div class="container">
        <div class="row">
          <div class="col-6">
            <label for="amount">Enter Amount:</label>
          </div>
          <div class="col-6 t">
            <input type="text" name="amount" id="amount" placeholder="100000" />
          </div>
        </div>
        <div class="row">
          <label for="payee" class="col-6">Choose a Payee:</label>
          <select id="payee" class="col-6" name="payee">
            <% users.forEach(function(user) { %>
            <option value="<%= user.name %>"><%= user.name %></option>
            <%}); %>
          </select>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg button">Transfer</button>
        </div>
      </div>
    </form>
    <div class="Home">
      <a class="back" href="/">Home Page</a>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>
